<div class="modal user-modal-avatar" id="avatarChangeModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <div class="header-brand--story">
          <div class="header-brand-icon">
            <span class="fa-stack">
              <i class="fa fa-circle fa-stack-2x fa-4x pull-left"></i>
              <i class="cdp cdp-user cdp-stack-1x cdp-inverse"></i>
            </span>
          </div>
          <div class="header-brand-text">
            <h3 class="header-brand-text--title">Mudar imagem</h3>
            <small class="header-brand-text--small">Altere sua imagem de perfil</small>
          </div>
        </div>
        <button type="button" class="close" data-dismiss="modal"><i class="icons-outline icons-outline-circle-close icons-outline-2x"></i></button>
      </div>

  <div class="modal-body">

    <form id="avatar-upload" class="form-upload-avatar" name="uploadAvatarForm" >
    <div class="row form-upload">
      <div class="col-lg-offset-2 col-lg-8">
      {{#if imageSelected}}
        {{we-image-crop src=salvedImage.urls.original file=salvedImage data=cropImageData}}
      {{else}}
        <div class="form-group">
        <br><br>
          <div class="form-control file-uploader">
            <div class="col-md-8">
              {{image-upload multiple="false" files=files}}
            </div>
          </div>
        </div>
      {{/if}}
    </div>
  </form>
    </div>
  </div>
  <div class="modal-footer">
    {{#if imageSelected}}
      <button class="btn btn-primary" type="buttom" {{action 'cropAndSave'}}>Salvar foto</button>
    {{else}}
      <button class="btn btn-primary" type="buttom" {{action 'selectFile'}}>
      Pr√≥ximo
      </button>
    {{/if}}
  </div>

    </div>
  </div>
</div>
