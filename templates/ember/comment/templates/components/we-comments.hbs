<div class="comments">
  {{#if comments}}

    {{#if hasMoreComments}}
      <div class="comments-header">
        <div class="comment-total">Exibindo {{comments.length}} de {{meta.count}} comentarios &nbsp;- <button class="btn btn-default btn-xs" {{action 'loadAllComments'}}> mostrar todos?</button></div>
      </div>
    {{else}}
      <div class="comment-total">Exibindo {{comments.length}} comentario(s)</div>
    {{/if}}
  {{/if}}
  {{render 'comments/list' comments}}
</div>